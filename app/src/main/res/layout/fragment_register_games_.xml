<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterGames_Fragment"
    android:background="@drawable/noneback"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chose Your Games"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:fontFamily="@font/vt323"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


   <LinearLayout
       android:id="@+id/lol"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/txt"
       android:gravity="center">

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/rec_games_id"
           android:layout_width="wrap_content"
           android:layout_height="match_parent" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/lol"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp">

        <Button
            android:id="@+id/button_done_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="@color/notselected"
            android:layout_below="@+id/rec_games_id"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/rec_games_id"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:background="@drawable/btnframedone"/>
    </LinearLayout>
</RelativeLayout>