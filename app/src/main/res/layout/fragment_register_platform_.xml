<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RegisterPlatform_Fragment"
    android:orientation="vertical"
    android:background="@drawable/noneback">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chose Your Platform"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#fff"
        android:fontFamily="@font/vt323"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ps4_img_id"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/iconps"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/xbox_img_id"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/iconxbox"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nin_img_id"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/isonnen"
                    android:layout_marginRight="20dp"/>

                <ImageView
                    android:id="@+id/pc_img_id"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/iconpc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/mobile_img_id"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/iconmobile" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>